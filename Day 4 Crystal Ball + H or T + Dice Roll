def on_forever():
    if input.button_is_pressed(Button.A):
        basic.clear_screen()
        input.on_gesture(Gesture.SHAKE, on_gesture_shake_heads_tails)
    if input.button_is_pressed(Button.B):
        basic.clear_screen()
        input.on_gesture(Gesture.SHAKE, on_gesture_shake_crystal_ball)
    if input.button_is_pressed(Button.AB):
        basic.clear_screen()
        input.on_gesture(Gesture.SHAKE, on_gesture_shake_dice_roll)
    
basic.forever(on_forever)

def on_gesture_shake_crystal_ball():
    num = randint(0,3)
    if num == 0:
        basic.show_string("YES")
        pause(200)
        basic.clear_screen()
    elif num == 1:
        basic.show_string("NO")
        pause(200)
        basic.clear_screen()
    elif num == 2:
        basic.show_string("MAYBE")
        pause(200)
        basic.clear_screen()
    elif num == 3:
        basic.show_string("IDK")
        pause(200)
        basic.clear_screen()

def on_gesture_shake_heads_tails():
    num = randint(0,1)
    if num == 0:
        basic.show_string("H")
        pause(200)
        basic.clear_screen()
    elif num == 1:
        basic.show_string("T")
        pause(200)
        basic.clear_screen()

def on_gesture_shake_dice_roll():
    num = randint(1,6)
    basic.show_number(num)

